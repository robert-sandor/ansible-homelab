TZ={{ timezone }}

{% for host in groups['base'] %}
WUD_WATCHER_{{ host }}_HOST={{ host }}.{{ domain }}
WUD_WATCHER_{{ host }}_WATCHBYDEFAULT=false
WUD_WATCHER_{{ host }}_CRON={{ wud_cron_schedule }}
{% endfor %}

{% if wud_ntfy_enable %}
WUD_TRIGGER_NTFY_ntfy_TOPIC={{ wud_ntfy_topic }}
WUD_TRIGGER_NTFY_ntfy_URL={{ wud_ntfy_url }}
WUD_TRIGGER_NTFY_ntfy_PRIORITY={{ wud_ntfy_priority }}
WUD_TRIGGER_NTFY_ntfy_MODE=batch
WUD_TRIGGER_NTFY_ntfy_ONCE=false
{% endif %}

{% if wud_oidc_enable %}
WUD_AUTH_OIDC_{{ wud_oidc_name }}_CLIENTID={{ wud_oidc_client_id }}
WUD_AUTH_OIDC_{{ wud_oidc_name }}_CLIENTSECRET={{ wud_oidc_client_secret }}
WUD_AUTH_OIDC_{{ wud_oidc_name }}_DISCOVERY={{ wud_oidc_discovery_url }}
WUD_AUTH_OIDC_{{ wud_oidc_name }}_REDIRECT={{ wud_oidc_redirect | lower }}
{% endif %}
